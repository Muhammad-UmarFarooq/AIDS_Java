// sum of two numbers using pointers
#include<stdio.h>
// function to calculate sum using pointers
void Sum(int *a,int *b,int *result)
{
    *result=*a+*b;
}
// main function
int main()
{
    int a,b,result;
    printf("enter two numbers\n");
    scanf("%d %d",&a,&b);
    printf("the sum of a and b is\n");
    Sum(&a,&b,&result);
    printf("Sum of %d and %d is : %d\n",a,b,result);
    return 0;
}
/*
output
enter two numbers
12 30
the sum of a and b is
Sum of 12 and 30 is : 42


*/
